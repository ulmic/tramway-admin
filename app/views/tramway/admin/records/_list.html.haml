= paginate @records, theme: 'twitter-bootstrap-4'
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= t 'helpers.links.actions'
  %tbody
    - @records.each do |record|
      %tr
        %td
          = link_to record.id, record_path(record)
        %td.actions
          .btn-group{ data: { toggle: :buttons } }
            = link_to fa_icon(:pencil), edit_record_path(record), class: 'btn btn-warning btn-sm'
            = link_to fa_icon(:remove), record_path(record), method: :delete, class: 'btn btn-sm btn-danger'
= paginate @records, theme: 'twitter-bootstrap-4'
