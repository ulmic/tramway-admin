%nav.navbar.navbar-expand-md.navbar-dark.bg-dark
  %a.navbar-brand(href="#")
    Tramway Admin
  .navbar-collapse.collapse
    %ul.navbar-nav
      = menu_item 'Test', '#'
    %ul.nav.navbar-nav.ml-auto
      - if signed_in?
        %li.nav-item
          = link_to edit_users_account_path, class: 'nav-link' do
            = fa_icon :user
            = t('helpers.links.profile')
        %li.nav-item
          = link_to session_path, method: :delete, class: 'nav-link' do
            = fa_icon 'sign-out'
            = t('helpers.links.sign_out')
      - else
        %li.nav-item
          = link_to new_session_path, class: 'nav-link' do
            = fa_icon 'sign-in'
            = t('helpers.links.enter')
